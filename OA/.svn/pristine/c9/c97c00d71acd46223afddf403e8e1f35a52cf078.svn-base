<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>出差申请</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <style>
        	.content{margin: 0 auto;width: 20.5cm;}
        	table{border:solid 1px #000000;text-align: center;font-size: 10.5pt;border-width:1px 0px 0px 1px;width: 100%;border-spacing: 0;}
			td,th{border:solid 1px #000000; border-width:0px 1px 1px 0px; padding:5px 0px;text-align: center;}
        </style>
    </head>
    <body>
    	<form id="form">
    		<input name="id" value="id" />
    		<input name="name" value="name"/>
    		<input name="age" value="age"/>
    		<hr>
    		<input name="language" value="Chinese" />
    		<input name="language" value="English" />
    		<input name="language" value="Japanese" />
    	</form>
    	<div><button onclick="mysubmit('get')">get</button><button onclick="mysubmit('post')">post</button><button onclick="mysubmit('put')">put</button><button onclick="mysubmit('delete')">delete</button></div>
        <script src="./assets/global/plugins/jquery.min.js" type="text/javascript"></script>
        <script>
        	var mysubmit = function(type){
                var array = $("#form").serializeArray();
                console.log(array);
                var obj = {};
                $.each(array,function(){
                 	if(obj[this.name]==undefined){
                		obj[this.name] = this.value;
                	}else{
                		if($.isArray(obj[this.name])){
                			obj[this.name].push(this.value);
                		}else{
                			obj[this.name] = [obj[this.name],this.value];
                		}
                	}
                });
        		
        		$.ajax({
        			url: "./testrest",
        			type: type,
        			data: obj,
        			dataType: "json",
        			success: function(data){
        				alert(data);
        			}
        		});
        	};
        </script>
    </body>
</html>